                                @Html.TextBoxFor(model => model.PrimerNombre, new { @class = "form-control col-md-3 col-sm-3 col-xs-12" })
                                @Html.ValidationMessageFor(model => model.PrimerNombre, "", new { @class = "text-danger" })
                            </div>
