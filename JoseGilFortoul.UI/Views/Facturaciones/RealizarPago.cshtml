@model List<JoseGilFortoul.Models.Alumno>
@{
    ViewBag.Title = "Agregar Pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="col-md-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Realizar Pagos</h2>
                    <div class="clearfix"></div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            @TempData["Error"]
                        </div>
                    }
                </div>
                <div class="x_content">
                    <br />
                    <form method="post" action="/Facturaciones/RealizarPago" class="form-horizontal form-label-left">
                        <div class="x_content">
                            <div class="table-responsive">
                                <input type="hidden" id="idAlumno" name="id" />
                                @if (Model.Count > 0)
                                {
                                    <table class="table table-striped jambo_table bulk_action">
                                        <thead>
                                            <tr class="headings">
                                                <th class="column-title">Seleccionar </th>
                                                <th class="column-title">Alumno </th>
                                                <th class="column-title">Grado Escolar </th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr class="even pointer">
                                                    <td class=" "><input type="radio" class="rbAlumno" name="seleccionarAlumno" value="@item.Id" /></td>
                                                    <td class=" ">@item.PrimerApellido @item.SegundoApellido, @item.PrimerNombre @item.SegundoNombre</td>
                                                    <td class=" ">@item.GradoEscolar.Grado</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <h3>No posee alumnos para registrar pagos</h3>
                                }
                            </div>
                        </div>
                        <div id="seleccionPago" style="display: none">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Período Escolar</label>
                                <div class="col-md-3 col-sm-3 col-xs-12">
                                    <select name="idPeriodoEscolar" class="form-control">
                                        <option>Seleccione Período</option>
                                        @foreach (var item in ViewBag.Periodos)
                                        {
                                            <option value="@item.Id">@item.Periodo</option>
                                        }
                                    </select>
                                </div>
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Concepto de Pago</label>
                                <div class="col-md-3 col-sm-3 col-xs-12">
                                    <select id="ddlConceptoPago" name="idConceptoPago" class="form-control">
                                        <option>Seleccione Concepto</option>
                                        @foreach (var item in ViewBag.Conceptos)
                                        {
                                            <option value="@item.Id">@item.Nombre</option>
                                        }
                                    </select>
                                </div>                     
                            </div>
                            <div class="form-group">
                                <div id="seleccionMes" style="display: none">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Mes</label>
                                    <div class="col-md-3 col-sm-3 col-xs-12">
                                        <select name="idMesEscolar" class="form-control">
                                            <option>Seleccione Mes</option>
                                            @foreach (var item in ViewBag.Meses)
                                            {
                                                <option value="@item.Id">@item.Mes</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Comentarios</label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    <textarea class="form-control" name="comentario" rows="3"></textarea>
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">Agregar al Carrito</button>
                                </div>
                            </div>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>