@model JoseGilFortoul.Models.Usuario

@{
    ViewBag.Title = "Cambiar contraseña";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form method="post" action="/Login/ChangePassword">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <h1>Cambiar contraseña</h1>
                    <div>
                        <input type="password" class="form-control" placeholder="Contraseña" name="pass" required="" />
                    </div>
                    <div>
                        <input type="password" class="form-control" placeholder="Confirmar Contraseña" name="passConfirm" required="" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default">Cambiar contraseña</button>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="clearfix"></div>

                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            @TempData["Error"]
                        </div>
                    }

                    <div class="separator">
                        <div class="clearfix"></div>
                        <br />

                        <div>
                            <h1><i class="fa fa-graduation-cap"></i> Colegio Jose Gil Fortoul</h1>
                            <p><i class="fa fa-registered"></i> @DateTime.Now.ToString("yyyy") Todos los derechos reservados.</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>