
@{
    ViewBag.Title = "Inicio de Sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form method="post" action="/Login/Login">
                    <h1>Inicio de Sesión</h1>
                    <div>
                        <input type="text" class="form-control" placeholder="Correo" name="mail" required="" />
                    </div>
                    <div>
                        <input type="password" class="form-control" placeholder="Contraseña" name="pass" required="" />
                    </div>
                    <div>
                        <button type="submit" class="btn btn-default">Iniciar Sesión</button>
                        <a class="reset_pass" href="@Url.Action("Recover")">Olvidé mi contraseña</a>
                    </div>

                    <div class="clearfix"></div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-info alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            @TempData["Success"]
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            @TempData["Error"]
                        </div>
                    }

                    <div class="separator">
                        <p class="change_link">
                            <a href="@Url.Action("Register")" class="to_register"> Registrarme </a>
                        </p>

                        <div class="clearfix"></div>
                        <br />

                        <div>
                            <h1><i class="fa fa-graduation-cap"></i> Colegio Jose Gil Fortoul</h1>
                            <p><i class="fa fa-registered"></i> @DateTime.Now.ToString("yyyy") Todos los derechos reservados.</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>