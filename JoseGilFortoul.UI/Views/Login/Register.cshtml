
@{
    ViewBag.Title = "Registrar Usuario";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div>
    <div class="login_wrapperRegister">
        <div class="animate form registration_form">
            <section class="login_contentRegister">
                <form method="post" action="/Login/Register">
                    <h1>Registrate</h1>
                    <table width="100%">
                        <tr>
                            <td>
                                <div>
                                    <input type="text" class="form-control" placeholder="Nombre" name="nombre" required="" />
                                </div>
                            </td>
                            <td>
                                <div>
                                    <input type="text" class="form-control" placeholder="Apellido" name="apellido" required="" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div>
                                    <input type="email" class="form-control" placeholder="Correo" name="mail" required="" />
                                </div>
                            </td>
                            <td>
                                <div>
                                    <input type="email" class="form-control" placeholder="Confirmar correo" name="confirmMail" required="" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div style="margin-bottom: 20px;">
                                    <input type="number" class="form-control" placeholder="Carnet de identidad" name="cardID" required="" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div>
                                    <input type="password" class="form-control" placeholder="Contraseña" name="pass" required="" />
                                </div>
                            </td>
                            <td>
                                <div>
                                    <input type="password" class="form-control" placeholder="Confirmar contraseña" name="confirmPass" required="" />
                                </div>
                            </td>
                        </tr>
                    </table>
                    <div>
                        <button type="submit" class="btn btn-default">Enviar solicitud</button>
                    </div>

                    <div class="clearfix"></div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            @TempData["Error"]
                        </div>
                    }

                    <div class="separator">
                        <p class="change_link">
                            <a href="@Url.Action("Index")" class="to_register"> Iniciar Sesion </a>
                        </p>

                        <div class="clearfix"></div>
                        <br />

                        <div>
                            <h1><i class="fa fa-graduation-cap"></i> Colegio Jose Gil Fortoul</h1>
                            <p><i class="fa fa-registered"></i> @DateTime.Now.ToString("yyyy") Todos los derechos reservados.</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>